---
const {
  x,
  bluesky,
  mastadon,
  linkedin,
  github,
  email,
  googleScholar,
  orcid,
  researchGate,
} = Astro.props;

const emailHref = `mailto:${email}`;

import XLogo from "@assets/svg/x_logo.svg";
import BlueskyLogo from "@assets/svg/bluesky_logo.svg";
import LinkedinLogo from "@assets/svg/linkedin.svg";
import ResearchGateLogo from "@assets/svg/research_gate.svg";
import OrcidLogo from "@assets/svg/orcid.svg";
import GithubLogo from "@assets/svg/github.svg";
import GoogleScholarLogo from "@assets/svg/google_scholar.svg";
import MastadonLogo from "@assets/svg/mastadon.svg";
import MailLogo from "@assets/svg/mail.svg";
---

<style lang="scss">
  .person-social {
    display: flex;
    gap: 18px;
    align-items: center;
    align-content: flex-start;

    a {
      display: flex;
      align-items: center≈õ;
    }
  }
</style>

<div class="person-social">
  {
    email ? (
      <a aria-label="Link to email" href={emailHref}>
        <MailLogo height={12} width={15} />
      </a>
    ) : (
      ""
    )
  }

  {
    linkedin ? (
      <a
        aria-label="Link to LinkedIn"
        href={linkedin}
        target="_blank"
        rel="noreferrer noopener"
      >
        <LinkedinLogo width={15} />
      </a>
    ) : (
      ""
    )
  }

  {
    github ? (
      <a
        aria-label="Link to GitHub"
        href={github}
        target="_blank"
        rel="noreferrer noopener"
      >
        <GithubLogo width={15} />
      </a>
    ) : (
      ""
    )
  }
  {
    x ? (
      <a
        aria-label="Link to X"
        href={x}
        target="_blank"
        rel="noreferrer noopener"
      >
        <XLogo width={15} />
      </a>
    ) : (
      ""
    )
  }

  {
    bluesky ? (
      <a
        aria-label="Link to Bluesky"
        href={bluesky}
        target="_blank"
        rel="noreferrer noopener"
      >
        <BlueskyLogo width={15} />
      </a>
    ) : (
      ""
    )
  }
  {
    mastadon ? (
      <a
        aria-label="Link to Mastadon"
        href={mastadon}
        target="_blank"
        rel="noreferrer noopener"
      >
        <MastadonLogo width={15} />
      </a>
    ) : (
      ""
    )
  }

  {
    googleScholar ? (
      <a
        aria-label="Link to Google Scholar"
        href={googleScholar}
        target="_blank"
        rel="noreferrer noopener"
      >
        <GoogleScholarLogo width={15} />
      </a>
    ) : (
      ""
    )
  }
  {
    orcid ? (
      <a
        aria-label="Link to Orcid"
        href={orcid}
        target="_blank"
        rel="noreferrer noopener"
      >
        <OrcidLogo width={15} />
      </a>
    ) : (
      ""
    )
  }
  {
    researchGate ? (
      <a
        aria-label="Link to Research Gate"
        href={researchGate}
        target="_blank"
        rel="noreferrer noopener"
      >
        <ResearchGateLogo width={15} />
      </a>
    ) : (
      ""
    )
  }
</div>
