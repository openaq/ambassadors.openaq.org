---
const { project } = Astro.props;
---

<style lang="scss">
  @use "openaq-design-system/scss/variables";
  @use "openaq-design-system/scss/mixins/index.scss" as mixins;

  .project-card {
    background-color: white;
    height: auto;
    width: 240px;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.2s ease-in-out;
    pointer-events: auto;

    a {
      text-decoration: none;
      color: black;
    }

    &:hover {
      transform: translateY(-5px);
    }

    &__img {
      width: 100%;
      height: 180px;
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
    .project-content {
      text-align: center;
      padding: 15px;
      text-align: left;
      h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 5px;
      }
      p {
        font-size: 0.9rem;
        color: #7e8c9a;
      }
    }
  }
</style>

<article class="project-card">
  <a href={`/projects/${project.id}`} rel="noopener noreferrer">
    <div class="project-card__img">
      <img src={project.data.image.src} alt={project.data.name} />
    </div>
    <div class="project-content">
      <h3>{project.data.name}</h3>
      <p>{project.body}</p>
    </div>
  </a>
</article>
