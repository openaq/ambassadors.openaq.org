---
const { projects } = Astro.props;
---

<style lang="scss">
  @use "openaq-design-system/scss/variables";
  @use "openaq-design-system/scss/mixins/index.scss" as mixins;

  .project-card {
    background-color: white;
    display: block;
    height: auto;
    width: 250px;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.2s ease-in-out;

    &:hover {
      transform: translateY(-5px);
    }

    &__img {
      width: 100%;
      height: 180px;
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
    .project-content {
      text-align: center;
      padding: 15px;
      h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 5px;
      }
      p {
        font-size: 0.9rem;
      }
    }
  }
</style>
{
  projects.map((project) => {
    return (
      <article class="project-card">
        <div class="project-card__img">
          <a href={project.data.url} target="_blank" rel="noopener noreferrer">
            <img src={project.data.image.src} alt={project.data.name} />
          </a>
        </div>
        <div class="project-content">
          <h3>{project.data.name}</h3>
          <p>{project.body}</p>
        </div>
      </article>
    );
  })
}
