---
import BaseLayout from "@layouts/BaseLayout.astro";
import PageLayout from "@layouts/PageLayout.astro";
---

<style lang="scss">
  @use "openaq-design-system/scss/variables" as variables;
  @use "openaq-design-system/scss/mixins/index" as mixins;

  .support-page {
    padding-bottom: 100px;
  }
  .hero {
    height: 100vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .img-overlay img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .img-overlay::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(34, 34, 34, 0.6);
  }

  .hero-overlay {
    position: relative;
    z-index: 1;
    padding: 2rem;
    border-radius: 10px;
    h1 {
      font-size: 2rem;
    }
  }

  .why-section {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 1rem;
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: center;
    h2 {
      text-align: center;
    }
    p {
      margin-bottom: 5px;
      line-height: 1.8;
    }
  }

  .articles-section {
    display: flex;
    align-items: center;
    position: relative;
    max-width: 1000px;
    margin: 0 auto;

    .left-article {
      background-color: #a1c0a261;
      width: 60%;
      padding: 40px 60px;
      position: relative;
      p {
        font-size: 0.8rem;
        width: 80%;
        line-height: 1.6;
        span {
          font-weight: bold;
          font-size: 1rem;
        }
      }
    }
    .right-article {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 50%;

      .right-img-overlay {
        position: relative;
        width: 100%;
      }

      .right-img-overlay img {
        width: 100%;
        height: auto;
        object-fit: cover;
      }

      .right-img-overlay::after {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 97%;
        background: rgba(34, 34, 34, 0.6);
      }
      .article-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 90%;
        text-align: center;
        z-index: 2;
        color: white;
        font-size: 1.8rem;
        font-weight: bold;
        padding: 1rem;
      }
    }
  }

  .support-section {
    text-align: center;
    padding: 4rem 1rem;

    h2 {
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 2rem;
    }

    .support-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: no-wrap;
      max-width: 1200px;
      margin: 0 auto;
    }

    .support-card {
      padding: 1.5rem;
      width: 250px;
      text-align: center;
    }

    .support-icon {
      background: #e0f0e9;
      border-radius: 50%;
      width: 65px;
      height: 65px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1rem;
      img {
        width: 50px;
      }
    }

    .support-card h3 {
      font-size: 1.2rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      width: 150px;
      margin: 0 auto;
    }

    .support-card p {
      font-size: 0.9rem;
      color: #444;
    }
  }

  .card-container {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .card {
    background: #f3f3f3;
    padding: 1.5rem;
    border-radius: 10px;
    max-width: 300px;
  }

  footer {
    background: #222;
    color: white;
    text-align: center;
    padding: 2rem 0;
  }

  .button {
    font-size: 0.8rem;
    font-weight: bold;
    background: #3fc2c0;
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 50px;
    text-decoration: none;
    display: inline-block;
    margin-top: 1rem;
  }

  .future-section {
    height: 100vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: relative;
    overflow: hidden;
    margin-bottom: 40px;
  }

  .img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .img-overlay img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .img-overlay::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(34, 34, 34, 0.6);
  }

  .future-overlay {
    position: relative;
    z-index: 1;
    padding: 2rem;
    border-radius: 10px;
    h1 {
      font-size: 2rem;
    }
  }

  .last-section {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 60px;
    padding: 20px 60px;
    margin: 0 auto;

    .left-article,
    .right-article {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .left-article {
      width: 40%;
      p {
        font-size: 2rem;
        font-weight: bold;
        width: 50%;
        margin: 0 auto;
      }
    }
    .vertical-line {
      background-color: variables.$sky120;
      width: 4px;
      height: 300px;
      z-index: 1000;
    }

    .right-article {
      width: 60%;
      p {
        width: 60%;
        margin: 0 auto;
        line-height: 1.6;
        span {
          font-weight: bold;
          font-size: 1.2rem;
        }
      }
    }
  }

  @media (max-width: 900px) {
    .why-section {
      padding: 4rem 3rem;
    }
    .support-container {
      display: flex;
      flex-wrap: wrap;
    }

    .last-section {
      flex-direction: column;
      justify-content: center;
      width: 100%;
      max-width: 100%;
      padding: 20px;

      .left-article,
      .right-article {
        width: 100%;
        text-align: center;
      }

      .left-article {
        p {
          display: flex;
          justify-content: center;
          align-items: center;
        }
      }

      .right-article {
        width: 100% !important;
        p {
          width: 80% !important;
        }
      }

      .vertical-line {
        display: none;
      }
    }
  }
  @media (max-width: 750px) {
    .articles-section {
      flex-direction: column;
      align-items: center;
      text-align: center;
      .left-article {
        width: 100%;
        p {
          width: 100%;
        }
      }

      .right-article {
        position: relative;
        width: 100%;
        transform: none;
        top: 0;
        .right-img-overlay {
          img {
            height: auto;
            object-fit: cover;
          }

          .article-overlay {
            font-size: 2.2rem;
            padding: 0.5rem;
          }
        }
      }
    }
  }
  @media (max-width: 450px) {
    .articles-section {
      .right-article {
        .right-img-overlay {
          .article-overlay {
            font-size: 1.5rem;
          }
        }
      }
    }
  }
</style>

<BaseLayout>
  <div class="support-page">
    <section class="hero">
      <div class="img-overlay">
        <img
          src="src/assets/images/casey-horner-4rDCa5hBlCs-unsplash.jpg"
          alt=""
        />
      </div>
      <div class="hero-overlay">
        <h1>TOGETHER WE CAN MAKE A DIFFERENCE</h1>
        <p>
          Help us achieve our vision of a world where everyone breathes healthy
          air, enabled by universal access to data.
        </p>
        <a href="#" class="button">Become a Funder</a>
      </div>
    </section>

    <section class="why-section">
      <h2>WHY IT MATTERS</h2>
      <p>
        Poor air quality affects everyone. 99% of people on the planet live
        where air quality guidelines set by the World Health Organization are
        not being met.
      </p>
      <p>
        The average person loses 2.3 years of life expectancy because of
        exposure to particulate pollution, with those living in the most
        polluted regions losing almost 7.
      </p>
      <p>
        Air pollution is, in fact, the 4th leading risk factor for early death
        worldwide and impacts health at all stages of life.
        <br /> We can, and must, clean up our air, especially to protect the most
        vulnerable.
      </p>
      <a href="#" class="button">Become a Funder</a>
    </section>

    <section class="articles-section">
      <article class="left-article">
        <p>
          <span>OpenAQ</span> has built the world's first and largest open-source
          air quality data platform, aggregating and harmonizing billions of data
          points from countries across the globe.
        </p><p>
          By providing universal access to air quality data, we empower a global
          community of changemakers to solve air inequality.
        </p>
        <a href="#" class="button">Become a Funder</a>
      </article>
      <article class="right-article">
        <div class="right-img-overlay">
          <img
            src="src/assets/images/ella-ivanescu-JbfhNrpQ_dw-unsplash.jpg"
            alt=""
          />
          <div class="article-overlay">
            <p>
              "9 out of 10 people globally breathe polluted air every day." —
              WHO
            </p>
          </div>
        </div>
      </article>
    </section>

    <section class="support-section">
      <h2>YOUR DONATION WILL SUPPORT:</h2>
      <div class="support-container">
        <div class="support-card">
          <div class="support-icon">
            <img src="src/assets/svg/globe.svg" alt="Global Coverage Icon" />
          </div>
          <h3>Expanding Global Coverage</h3>
          <p>
            The expansion of data coverage in low- and middle-income countries
            and environmental justice communities.
          </p>
        </div>
        <div class="support-card">
          <div class="support-icon">
            <img src="src/assets/svg/heart.svg" alt="Tools Icon" />
          </div>
          <h3>Building Tools for Everyone</h3>
          <p>
            The development of new tools to support universal access to air
            quality data.
          </p>
        </div>
        <div class="support-card">
          <div class="support-icon">
            <img src="src/assets/svg/community.svg" alt="Training Icon" />
          </div>
          <h3>Training Changemakers</h3>
          <p>
            Engaging leaders in using air quality data to fight pollution in
            their communities.
          </p>
        </div>
        <div class="support-card">
          <div class="support-icon">
            <img src="src/assets/svg/infrastructure.svg" alt="Platform Icon" />
          </div>
          <h3>Sustaining Our Platform</h3>
          <p>Ensuring our air quality data remains accessible to all.</p>
        </div>
      </div>
      <a href="#" class="button">Become a Funder</a>
    </section>

    <section class="future-section">
      <div class="img-overlay">
        <img
          src="src/assets/images/josue-michel-xCU7nCMNfI8-unsplash.jpg"
          alt=""
        />
      </div>
      <div class="future-overlay">
        <h1>JOIN US IN CREATING A FUTURE WITH CLEAN AIR FOR ALL</h1>
        <p>
          Your donation directly supports our mission of enabling universal
          access to air quality data — because everyone deserves to breathe
          healthy air.
        </p>
        <a href="#" class="button">Become a Funder</a>
      </div>
    </section>

    <section class="last-section">
      <article class="left-article">
        <p>YOU’RE SUPPORTING A TRUSTED AND TRANSPARENT ORGANIZATION</p>
      </article>
      <div class="vertical-line"></div>
      <article class="right-article">
        <p>
          <span>OpenAQ</span> is proud to be rated 4 stars by Charity Navigator and
          holds the Platinum Seal of Transparency from GuideStar.
        </p>
        <p>
          Your donation goes directly toward programs, tools, and initiatives
          that make a measurable difference.
        </p>
        <a href="#" class="button">Become a Funder</a>
      </article>
    </section>
  </div>
</BaseLayout>
