---
import MiniCards from "@components/cards/MiniCards.astro";
import PartnerCards from "@components/cards/PartnerCards.astro";
import ProjectCard from "@components/cards/ProjectCard.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const partners = await getCollection("partners");
const projects = await getCollection("projects");
---

<style lang="scss">
  @use "openaq-design-system/scss/variables" as variables;

  @use "openaq-design-system/scss/mixins/index.scss" as mixins;
  @use "openaq-design-system/scss/utilities/types.scss";
  @use "openaq-design-system/scss/utilities/colors.scss";
  @use "openaq-design-system/scss/inputs";

  @use "openaq-design-system/scss/buttons";

  .hero-section {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;

    .hero-content {
      padding-top: 80px;
      background-color: #e2ebe1;
      padding-left: 40px;
      z-index: 2;

      h1 {
        font-size: 2.9rem;
        margin-top: 0;
        margin-bottom: 10px;
        font-weight: 500;
      }
      .hero-subtitle {
        max-width: 280px;
        width: 100%;
      }

      .learn-more-btn {
        width: fit-content;
      }
    }

    .custom-shape-divider-top-1743064981 {
      position: absolute;
      top: 0;
      left: 0;
      width: 80%;
      overflow: hidden;
      line-height: 0;
      transform: rotate(270deg);
      z-index: 0;
    }

    .custom-shape-divider-top-1743064981 svg {
      position: relative;
      display: block;
      width: calc(240% + 1.3px);
      height: 450px;
    }

    .custom-shape-divider-top-1743064981 .shape-fill {
      fill: #e2ebe1;
    }
  }
  .partner-section {
    margin-top: 60px;
    h1 {
      margin: 0 auto;
      text-align: center;
      margin-bottom: 40px;
    }
    .partner-logos {
      display: flex;
      flex-direction: row;
      gap: 100px;
      align-items: center;
      justify-content: center;
    }
  }

  .global-section {
    margin-top: 60px;
    h1 {
      text-align: center;
    }
    .global-image {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      img {
        max-width: 80%;
        height: auto;
      }
    }
  }
  .cards-section {
    margin-top: 60px;
    h1 {
      width: 40%;
      text-align: center;
      margin: 0 auto;
    }
    .mini-cards {
      margin-top: 20px;
      display: flex;
      flex-direction: row;
      gap: 20px;
      align-items: center;
      justify-content: center;
    }
  }

  .projects-section {
    margin-top: 60px;
    background-color: #e2ebe1;
    h1 {
      text-align: center;
      margin: 0 auto;
      padding-top: 20px;
    }
  }
</style>

<BaseLayout>
  <section class="hero-section">
    <div class="custom-shape-divider-top-1743064981">
      <svg
        data-name="Layer 1"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1200 120"
        preserveAspectRatio="none"
      >
        <path
          d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
          class="shape-fill"></path>
      </svg>
    </div>
    <div class="hero-content">
      <p>Lorem ipsum dolor sit amet, consectetur.</p>
      <h1>OpenAQ Ambassadors Program</h1>
      <p class="hero-subtitle">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Consectetur
        sapiente quasi blanditiis earum facilis doloremque. Ipsa quis deserunt
        fugiat est?
      </p>
      <a href="/apply/" class="btn btn-primary learn-more-btn" role="button"
        >Apply</a
      >
    </div>
    <div class="hero-image">
      <img
        src="/src/assets/images/ambassadors_workshops_monthly_sessions.webp"
        alt=""
      />
    </div>
  </section>

  <section class="partner-section">
    <h1>Partners</h1>
    <div class="partner-logos">
      <PartnerCards partners={partners} />
    </div>
  </section>

  <section class="global-section">
    <h1>The global reach of OpenAQ ambassadors</h1>
    <div class="global-image">
      <img src="/src/assets/images/global.png" alt="" />
    </div>
  </section>

  <section class="cards-section">
    <h1>
      A 10 month program to accelerate your career and drive clean air action
    </h1>
    <div class="mini-cards">
      <MiniCards />
    </div>
  </section>

  <section class="projects-section">
    <h1>Featured projects</h1>
    <ProjectCard projects={projects} />
  </section>
</BaseLayout>
