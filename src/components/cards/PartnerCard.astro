---

import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

interface Props {
  partner: CollectionEntry<'partners'>;
}

const { partner } = Astro.props;
---

<style lang="scss">
  @use 'openaq-design-system/scss/variables';
  @use 'openaq-design-system/scss/mixins/index.scss' as mixins;

  .partner-card {
    background-color: white;
    display: flex;
    height: auto;
    width: 250px;
    aspect-ratio: 1;
    box-shadow: 0 8px 5px 5px rgb(83, 83, 83, 0.25);
    border-radius: 10px;
    padding: 20px 15px;
    object-fit: cover;

    &__img {
      display: flex;
      flex: 1;
      justify-content: center;
      align-items: center;
      padding: 0 10px;

      img {
        width: 100%;
        height: auto;
        object-fit: contain;
      }
    }
  }
  @media (max-width: 1000px) {
    .partner-card {
      height: auto;
      width: 200px;
      aspect-ratio: 1;
      padding: 5px;
    }
  }
  @media (max-width: 600px) {
    .partner-card {
      height: auto;
      width: 150px;
      aspect-ratio: 1;
      padding: 0;
    }
  }
</style>

<article class="partner-card">
  <div class="partner-card__img">
    <a href={partner.data.url} target="_blank" rel="noopener noreferrer">
      <Image src={partner.data.image} alt={partner.data.name} />
    </a>
  </div>
</article>
