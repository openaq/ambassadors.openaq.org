---
const { partners } = Astro.props;
---

<style lang="scss">
  @use "openaq-design-system/scss/variables";
  @use "openaq-design-system/scss/mixins/index.scss" as mixins;

  .partner-card {
    background-color: white;
    display: flex;
    height: 250px;
    width: 250px;
    box-shadow: 0 8px 5px 5px rgb(83, 83, 83, 0.25);
    border-radius: 10px;
    padding: 20px 25px;

    &__img {
      display: flex;
      flex: 1;
      justify-content: center;
      align-items: center;
      padding: 0 16px;

      img {
        width: 100%;
        height: auto;
      }
    }
  }
</style>
{
  partners.map((partner) => {
    return (
      <article class="partner-card">
        <div class="partner-card__img">
          <a href={partner.data.url} target="_blank" rel="noopener noreferrer">
            <img src={partner.data.image.src} alt={partner.data.name} />
          </a>
        </div>
      </article>
    );
  })
}
